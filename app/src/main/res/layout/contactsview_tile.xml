<?xml version="1.0" encoding="utf-8"?>
<com.example.egorb.contactsviewsample.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/contactTile_photo"
        android:src="@drawable/face2"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/contactTile_gradient"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/contact_gradient" />
    <TextView
        android:id="@+id/contactTile_shortName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-thin"
        android:textColor="#ffffff"
        android:textSize="56sp"
        android:paddingBottom="30dp"
        android:text="EB" />
    <TextView
        android:id="@+id/contactTile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#dddddd"
        android:textSize="15sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:text="Mobile" />
    <TextView
        android:id="@+id/contactTile_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="10sp"
        android:textColor="#ffffff"
        android:layout_above="@id/contactTile_number"
        android:text="Egor Bogatov" />
    <ImageButton
        android:id="@+id/contactTile_overflow"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_marginRight="1dip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dip"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_overflow" />
</com.example.egorb.contactsviewsample.SquareRelativeLayout>